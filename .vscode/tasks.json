{
	"version": "2.0.0",
	"tasks": [
        {
            "label": "CMake: Configure",
            "type": "shell",
            "command": "cmake",
            "args": ["-B", "${workspaceFolder}/build", "-S", "${workspaceFolder}"],
            "group": "build",
            "problemMatcher": []
        },
		{
			"label": "CMake: Build All",
			"type": "shell",
			"command": "cmake",
			"args": ["--build", "${workspaceFolder}/build"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$msCompile",
			"dependsOn": "CMake: Configure"
		},
		{
			"label": "CMake: Build Current Day",
			"type": "shell",
			"command": "cmake",
			"args": ["--build", "${workspaceFolder}/build", "--target", "${fileBasenameNoExtension}"],
			"group": "build",
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Run Current Day",
			"type": "shell",
			"command": "${workspaceFolder}/build/bin/Debug/${fileBasenameNoExtension}.exe",
			"args": [],
			"options": {
				"cwd": "${workspaceFolder}/build/bin/Debug"
			},
			"group": "test",
			"problemMatcher": [],
			"dependsOn": "CMake: Build Current Day"
		}
	]
}
